{
  "$schema": "https://ap2-protocol.org/schemas/agentcard/v1.json",
  "version": "2025.0",
  "agent": {
    "id": "zkx402-agent-auth",
    "name": "zkX402 Agent Authorization Service",
    "description": "Privacy-preserving authorization for AI agents using zero-knowledge ML proofs. Prove authorization without revealing sensitive data.",
    "provider": "zkX402",
    "type": "authorization_service",
    "capabilities": [
      "zkml_proof_generation",
      "authorization_verification",
      "micropayments",
      "x402_protocol",
      "async_operations"
    ],
    "version": "1.3.0",
    "status": "production"
  },
  "discovery": {
    "homepage": "https://github.com/hshadab/zkx402",
    "documentation": "https://github.com/hshadab/zkx402/blob/main/README.md",
    "openapi": "https://zkx402-agent-auth.onrender.com/openapi.yaml",
    "wellknown": "https://zkx402-agent-auth.onrender.com/.well-known/x402",
    "contact": {
      "support": "https://github.com/hshadab/zkx402/issues",
      "email": "support@zkx402.com"
    }
  },
  "pricing": {
    "model": "pay_per_use",
    "currency": "USDC",
    "network": "base",
    "freeTier": {
      "available": true,
      "limit": "5 proofs per day",
      "resetPeriod": "24 hours"
    },
    "services": [
      {
        "id": "simple_threshold",
        "name": "Simple Threshold Authorization",
        "description": "Basic balance check - proves amount < balance",
        "price": {
          "amount": "0.001",
          "currency": "USDC",
          "unit": "per_proof"
        },
        "timeEstimate": "1-6.5 minutes",
        "category": "basic"
      },
      {
        "id": "percentage_limit",
        "name": "Percentage Limit Authorization",
        "description": "Limits spending to X% of balance",
        "price": {
          "amount": "0.0015",
          "currency": "USDC",
          "unit": "per_proof"
        },
        "timeEstimate": "1-6 minutes",
        "category": "basic"
      },
      {
        "id": "vendor_trust",
        "name": "Vendor Trust Verification",
        "description": "Requires minimum vendor reputation score",
        "price": {
          "amount": "0.001",
          "currency": "USDC",
          "unit": "per_proof"
        },
        "timeEstimate": "1-6 minutes",
        "category": "basic"
      },
      {
        "id": "velocity_1h",
        "name": "Hourly Velocity Control",
        "description": "Limits spending per hour",
        "price": {
          "amount": "0.002",
          "currency": "USDC",
          "unit": "per_proof"
        },
        "timeEstimate": "1-5 minutes",
        "category": "velocity"
      },
      {
        "id": "velocity_24h",
        "name": "Daily Velocity Control",
        "description": "Limits spending per 24 hours",
        "price": {
          "amount": "0.002",
          "currency": "USDC",
          "unit": "per_proof"
        },
        "timeEstimate": "1-5 minutes",
        "category": "velocity"
      },
      {
        "id": "risk_neural",
        "name": "Neural Risk Assessment",
        "description": "ML-based fraud detection and risk scoring",
        "price": {
          "amount": "0.06",
          "currency": "USDC",
          "unit": "per_proof"
        },
        "timeEstimate": "5-8 minutes",
        "category": "advanced"
      }
    ]
  },
  "payment": {
    "protocols": ["x402"],
    "schemes": ["zkml-jolt"],
    "networks": ["base-mainnet"],
    "settlementRails": [
      {
        "protocol": "x402",
        "scheme": "zkml-jolt",
        "network": "base-mainnet",
        "asset": {
          "symbol": "USDC",
          "address": "0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913",
          "decimals": 6,
          "chainId": 8453
        },
        "paymentAddress": "0x2b04D59EdC8Ddfc9b5190902BAf7a2857a103c91",
        "features": [
          "on_chain_verification",
          "instant_settlement",
          "micropayments"
        ]
      }
    ],
    "facilitator": false,
    "directSettlement": true
  },
  "endpoints": {
    "discovery": "/.well-known/x402",
    "authorization": "/x402/authorize/{modelId}",
    "policies": {
      "list": "/api/policies",
      "schema": "/api/policies/{policyId}/schema",
      "simulate": "/api/policies/{policyId}/simulate"
    },
    "proofs": {
      "generate": "/api/generate-proof",
      "verify": "/x402/verify-proof"
    },
    "webhooks": {
      "register": "/api/webhooks",
      "status": "/api/webhooks/{webhook_id}"
    },
    "health": "/health"
  },
  "integration": {
    "sdks": {
      "python": {
        "repository": "https://github.com/hshadab/zkx402/tree/main/zkx402-agent-auth/sdk/python",
        "package": "zkx402-sdk",
        "version": "1.0.0"
      }
    },
    "examples": {
      "quick_start": "https://github.com/hshadab/zkx402/blob/main/QUICKSTART.md",
      "api_reference": "https://github.com/hshadab/zkx402/blob/main/API_REFERENCE.md",
      "agent_integration": "https://github.com/hshadab/zkx402/blob/main/AGENT_INTEGRATION.md"
    },
    "authentication": {
      "methods": ["x402_payment"],
      "required": false,
      "notes": "Free tier available (5 proofs/day). x402 payment for unlimited access."
    }
  },
  "features": {
    "zeroKnowledge": {
      "enabled": true,
      "description": "Generate cryptographic proofs without revealing sensitive input data",
      "proofSystem": "JOLT Atlas zkVM",
      "verifiable": true
    },
    "caching": {
      "enabled": true,
      "strategy": "sha256_hash",
      "ttl": "24 hours",
      "speedup": "600x-4800x for cache hits"
    },
    "async": {
      "supported": true,
      "mechanism": "webhooks",
      "polling": false
    },
    "rateLimit": {
      "freeTier": {
        "limit": 5,
        "period": "24h",
        "scope": "per_ip"
      },
      "paidTier": {
        "limit": "unlimited",
        "authentication": "x402_payment"
      }
    }
  },
  "compliance": {
    "standards": ["x402", "ERC-20", "ONNX"],
    "privacy": {
      "zeroKnowledgeProofs": true,
      "dataRetention": "Proof results cached for 24 hours",
      "logsRetention": "30 days",
      "gdprCompliant": true
    },
    "security": {
      "encryption": "TLS 1.3",
      "signing": "ECDSA",
      "auditLog": true
    }
  },
  "performance": {
    "proofGeneration": {
      "simple": "1-6.5 minutes",
      "velocity": "1-5 minutes",
      "advanced": "5-8 minutes"
    },
    "simulation": "<1ms",
    "availability": "99.9%",
    "regions": ["us-west-2"]
  },
  "models": [
    {
      "id": "simple_threshold",
      "name": "Simple Threshold",
      "type": "comparison",
      "operations": 6,
      "inputs": ["amount", "balance"],
      "output": "boolean",
      "schema": {
        "$ref": "https://zkx402-agent-auth.onrender.com/api/policies/simple_threshold/schema"
      }
    },
    {
      "id": "percentage_limit",
      "name": "Percentage Limit",
      "type": "calculation",
      "operations": 20,
      "inputs": ["amount", "balance", "max_percentage"],
      "output": "boolean",
      "schema": {
        "$ref": "https://zkx402-agent-auth.onrender.com/api/policies/percentage_limit/schema"
      }
    },
    {
      "id": "vendor_trust",
      "name": "Vendor Trust",
      "type": "threshold",
      "operations": 5,
      "inputs": ["vendor_trust", "min_trust"],
      "output": "boolean",
      "schema": {
        "$ref": "https://zkx402-agent-auth.onrender.com/api/policies/vendor_trust/schema"
      }
    },
    {
      "id": "velocity_1h",
      "name": "Hourly Velocity",
      "type": "rate_limit",
      "operations": 8,
      "inputs": ["amount", "spent_1h", "limit_1h"],
      "output": "boolean",
      "schema": {
        "$ref": "https://zkx402-agent-auth.onrender.com/api/policies/velocity_1h/schema"
      }
    },
    {
      "id": "velocity_24h",
      "name": "Daily Velocity",
      "type": "rate_limit",
      "operations": 8,
      "inputs": ["amount", "spent_24h", "limit_24h"],
      "output": "boolean",
      "schema": {
        "$ref": "https://zkx402-agent-auth.onrender.com/api/policies/velocity_24h/schema"
      }
    },
    {
      "id": "risk_neural",
      "name": "Neural Risk Assessment",
      "type": "machine_learning",
      "operations": 50,
      "inputs": ["tx_amount", "tx_count_24h", "avg_amount", "days_since_first"],
      "output": "risk_score",
      "schema": {
        "$ref": "https://zkx402-agent-auth.onrender.com/api/policies/risk_neural/schema"
      }
    }
  ],
  "metadata": {
    "created": "2025-10-29",
    "updated": "2025-11-08",
    "maintainer": "zkX402 Team",
    "license": "MIT",
    "tags": ["zkml", "authorization", "x402", "base", "usdc", "zero-knowledge", "ai-agents"]
  }
}
